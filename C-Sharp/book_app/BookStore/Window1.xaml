<Window
    x:Class="BookStore.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookStore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="300"
    Height="400"
    mc:Ignorable="d" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label
            Width="70"
            Height="25"
            Margin="0,0,175,175"
            Content="Username:" />
        <TextBox
            x:Name="UsernameTxtbx"
            Width="120"
            Height="25"
            Margin="50,0,10,175" />
        <Label
            Width="70"
            Height="25"
            Margin="0,0,175,100"
            Content="Password:" />
        <PasswordBox
            x:Name="PasswordBx"
            Width="120"
            Height="25"
            Margin="50,0,10,100" />
        <Button
            x:Name="LoginButton"
            Width="120"
            Height="25"
            Margin="0,50,0,0"
            Click="LoginButton_Click"
            Content="Login" />
    </Grid>
</Window>
